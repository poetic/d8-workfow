                </div>
                <a class="card rcp-title w-inline-block" href="recipes/recipe.html">
                <h4 data-node-field="title">{{ content.recipe_title }}</h4></a>
              </div>
              <div class="card video-btn-wrapper">
                <a class="w-inline-block" href="#">
                  {{ content.recipe_vid_icon }}</a>
              </div>
