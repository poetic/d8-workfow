  <div class="card user-cmmt-wrapper" data-ix="fade-in-on-scroll" data-mh="review_card">
    <div class="activity separator-line user-cmmt w-clearfix">
      <a class="rcp-main user-pic-med user-pic-wrapper w-inline-block" href="/user/{{author_id}}">
        {{user_picture}}
      </a>
      <div class="rcp-author rcp-main rcp-summary-data">
        <a href="/user/uid----../user/recipe-box.html">{{author}}</a>
      </div>
      <div class="stars star-{{content.field_comment_rating['0']['#default_value']}} user-cmmt"></div>
      <div class="body-small date user-cmmt">{{created}}</div>
    </div><a href="../recipes/recipe.html" class="w--current">{{title}}</a>
    <p class="user-cmmt-txt">
      {{elements.comment_body}}
    </p><a class="show-review-link" data-ix="show-modal" href="#">Read moreâ€¦</a>
  </div>
</div>

